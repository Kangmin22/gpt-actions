openapi: 3.1.0
info:
  title: FM 구조 보호 API
  version: 1.0.0
servers:
  - url: https://mlcgmdaglvyonwaxlqf.supabase.co/rest/v1
paths:
  /structures:
    get:
      summary: "구조문서 전체 목록 반환 (보호 선언 true만)"
      parameters:
        - name: select
          in: query
          required: false
          schema:
            type: string
          example: title,content,prot_declared
        - name: prot_declared
          in: query
          required: false
          schema:
            type: string
          example: eq.true
        - name: apikey
          in: query
          required: true
          schema:
            type: string
      responses:
        '200':
          description: 정상 반환
          content:
            application/json:
              schema:
                type: array
                items:
                  type: object
                  properties:
                    title:
                      type: string
                    content:
                      type: string
                    prot_declared:
                      type: boolean
